#!/bin/sh

stat="$(cat /sys/class/power_supply/BAT0/status)"
bat="$(cat /sys/class/power_supply/BAT0/capacity)"

if [ "$stat" = "Discharging" ]; then
    if [ $bat -gt 15 ]; then
        printf "^d^ 󰁹 $bat%% "
    elif [ $bat -gt 5 ]; then
        printf "^c#262626^^b#d7af00^ 󰁹 $bat%% ^d^"
    else
        printf "^c#e4e4e4^^b#d70000^ 󰁹 $bat%% ^d^"
    fi
else
    printf "^c#000000^^b#87af00^ 󰁹 $bat%% ^d^"
fi

exit 0
